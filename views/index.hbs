<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Accounts List</title>
  </head>
  <body
    class="container d-flex flex-column justify-content-center align-items-center w-100 min-vh-100 p-4"
  >
    <h2 class="dipslay-2">{{title}}</h2>
    <a href="/add_new_food" class="btn btn-primary p-2 fw-bold my-2">Add New Food</a>
    {{#if message}}
      <h6 class="rounded-pill text-light {{#if bgColor}}{{bgColor}}{{/if}} p-2 mt-1 mb-2">{{message}}</h6>
    {{/if}}
    <table class="table table-striped table-bordered border-dark table-responsive table-warning text-center fs-5">
      <tr>
        <th>Food Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Action</th>
      </tr>
      {{#each foodRecord}}
        <tr>
          <td>{{this.food_name}}</td>
          <td>{{this.price}}</td>
          <td>{{this.category}}</td>
          <td>
            <a href="/auth/updateform/{{this.food_name}}" class="link-dark">Edit</a>
            &ensp;&ensp;&ensp;&ensp;
            <a onclick="return window.confirm('This action will permanently delete the item. Continue?');" 
            href="/auth/delete/{{this.food_name}}" class="link-danger">Delete</a>
          </td>
        </tr>
      {{/each}}
    </table>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>