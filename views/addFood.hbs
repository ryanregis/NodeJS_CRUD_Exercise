<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Add Food Record</title>
  </head>
  <body
    class="container d-flex flex-column justify-content-center align-items-center w-100 p-4"
  >
    <h1 class="display-4 mb-5">Add New Food</h1>

    <form
      action="/auth/add_food"
      method="post"
      class="p-3 d-flex flex-column justify-content-center align-items-center fs-5"
    >
      <fieldset class="border border-2 p-3 m-5 fs-5">
        <label for="food_name">Food Name:</label>
        <input type="text" name="food_name" id="food_name" required /><br /><br />

        <label for="price">Price:</label>
        <input type="number" name="price" id="price" value="0" required /><br /><br />

        <label for="food_category_id">Category:</label>
        <select name="food_category_id" id="food_category_id" required>
          <option value="0" selected disabled>-- Choose Food Category --</option>
          <option value="1">Appetizers / L'Entr√©e</option>
          <option value="2">Main Course / Plat Principal</option>
          <option value="3">Dessert / Le Dessert</option>
          <option value="4">Side Dishes / Plat d'Accompagnement</option>
          <option value="5">Drinks / Boissons</option>
        </select><br /><br />
      </fieldset>

      <button type="submit" class="btn btn-success">Submit</button>
    </form>

    {{#if message}}
      <h4 class="border border-1 border-info p-5">{{message}}</h4>
    {{/if}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

  </body>
</html>